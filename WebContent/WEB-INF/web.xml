<?xml version="1.1" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">
	<error-page>
		<error-code>400</error-code>
		<location>/error/400.jsp</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/error/401.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error/401.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>502</error-code>
		<location>/error/502.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.jsp</location>
	</error-page>
	<listener>
		<listener-class>sg.com.zElectronics.Listener</listener-class>
	</listener>
	<servlet>
		<servlet-name>cart</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.CartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cart</servlet-name>
		<url-pattern>/cart</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>test</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.TestServerlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>test</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>forget</servlet-name>
		<jsp-file>/forget.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>forget</servlet-name>
		<url-pattern>/forget</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.IndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern></url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.admin.ProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.ImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>adminAdd</servlet-name>
		<jsp-file>/admin/product/add.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminAdd</servlet-name>
		<url-pattern>/admin/product/add</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>adminEdit</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.admin.EditProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>order</servlet-name>
		<url-pattern>/admin/order</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>order</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.admin.OrderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminEdit</servlet-name>
		<url-pattern>/admin/product/edit/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>userEdit</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.user.EditUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userEdit</servlet-name>
		<url-pattern>/user/edit</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>userAdd</servlet-name>
		<jsp-file>/admin/user/add.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>userAdd</servlet-name>
		<url-pattern>/admin/users/add</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>user2</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.admin.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user2</servlet-name>
		<url-pattern>/admin/users/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>signUp</servlet-name>
		<jsp-file>/signUp.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>signUp</servlet-name>
		<url-pattern>/signUp</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.user.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>product</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.ProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>product</servlet-name>
		<url-pattern>/product/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>payment</servlet-name>
		<servlet-class>sg.com.zElectronics.controller.servlet.PaymentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>payment</servlet-name>
		<url-pattern>/payment</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Jersey Web Application</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>sg.com.zElectronics.controller.api</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.response.setStatusOverSendError</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.classnames</param-name>
			<param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey Web Application</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
</web-app>